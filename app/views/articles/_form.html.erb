<div class="container">
<%= form_for(@article) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %> <br>
  <%= f.label :content %> <br>
  <%= f.text_area(:content, size: '50x10') %>
  <%= f.submit %>
<% end %>
</div>

